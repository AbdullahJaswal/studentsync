root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,java,rst,ini}]
max_line_length = 120

[{*.js,*.ts,*.jsx,*.tsx}]
indent_size = 2
max_line_length = 120

[*.{html,css,scss,json,xml}]
indent_size = 2
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.compose.yml]
indent_size = 4
